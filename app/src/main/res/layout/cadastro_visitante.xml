<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cadastroVisitante"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/facin_back"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="br.pucrs.petinf.visitasguiadas.CadastroVisitante">

        <EditText
            android:id="@+id/nomeCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="#e9dddd" />

        <EditText
            android:id="@+id/instituição"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nomeCompleto"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Instituição de Ensino"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="#e9dddd" />

        <EditText
            android:id="@+id/cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/instituição"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="CPF"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:textColorHint="#e9dddd" />

        <EditText
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cpf"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="RG"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:textColorHint="#e9dddd" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rg"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorWhite"
            android:textColorHint="#e9dddd" />

        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="#e9dddd" />

        <EditText
            android:id="@+id/confirmarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/senha"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Confirma Senha"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="#e9dddd" />

        <Button
            android:id="@+id/confirmarCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmarSenha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/botao_redondo"
            android:paddingLeft="7sp"
            android:paddingRight="7sp"
            android:text="Confirmar Cadastro" />

    </RelativeLayout>
</ScrollView>