<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_facin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facin_andares"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.pucrs.petinf.visitasguiadas.Facin">

    <TextView
        android:id="@+id/andares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Andares"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/terreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/botao_redondo"
            android:text="Térreo" />

        <Button
            android:id="@+id/andar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/terreo"
            android:layout_alignBottom="@+id/terreo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/botao_redondo"
            android:text="2º Andar" />

        <Button
            android:id="@+id/andar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/terreo"
            android:layout_alignStart="@+id/terreo"
            android:layout_below="@+id/terreo"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_redondo"
            android:text="3º Andar" />

        <Button
            android:id="@+id/andar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/andar3"
            android:layout_alignBottom="@+id/andar3"
            android:layout_alignLeft="@+id/andar2"
            android:layout_alignStart="@+id/andar2"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_redondo"
            android:text="4º Andar" />

        <Button
            android:id="@+id/andar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/andar3"
            android:layout_alignStart="@+id/andar3"
            android:layout_below="@+id/andar3"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_redondo"
            android:text="5º Andar" />

        <Button
            android:id="@+id/Andar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/andar5"
            android:layout_alignBottom="@+id/andar5"
            android:layout_alignLeft="@+id/andar4"
            android:layout_alignStart="@+id/andar4"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_redondo"
            android:text="6º Andar" />

        <Button
            android:id="@+id/andar7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/andar5"
            android:layout_alignStart="@+id/andar5"
            android:layout_below="@+id/andar5"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_redondo"
            android:text="7º Andar" />

        <Button
            android:id="@+id/andar8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/andar7"
            android:layout_alignBottom="@+id/andar7"
            android:layout_alignLeft="@+id/Andar6"
            android:layout_alignStart="@+id/Andar6"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_redondo"
            android:text="8º Andar" />

    </RelativeLayout>
</RelativeLayout>
